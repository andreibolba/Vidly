@model Vidly.ViewModel.MoviesFormViewModel
@{
    ViewBag.Title = "MovieFormReadOnly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .field-validation-error {
        color: red;
    }

    .input-validation-error {
        border: 2px solid red;
    }
</style>

<h2>@Model.Title</h2>

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.DisplayTextFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Released)
        @Html.DisplayTextFor(m => m.Released)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreName)
        @Html.DisplayTextFor(m => m.GenreName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock)
        @Html.DisplayTextFor(m => m.Stock)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
