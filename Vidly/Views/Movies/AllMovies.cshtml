@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html {
        scroll-behavior: smooth;
    }

    ::-webkit-scrollbar {
        width: 0px;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    thead {
        font-size: 25px;
        padding: 20px;
    }

    td, th {
        border: 1px solid #808080;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #808080;
    }

    .white {
        color: white;
    }

    .buton {
        color: white;
        font-weight: bold;
        background: white;
        color: black;
        border: 1.5px solid black;
    }

    #buton{
        margin-top:20px;
        margin-bottom:20px;
    }
</style>

<h2>All Movies</h2>
<button class="btn btn-primary " id="buton">
    @Html.ActionLink("Add Movie", "Edit", "Movies", new { id = 0 }, new { @class = "white" })
</button>

    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <td width="50%">Movies</td>
        <td width="30%">Genre</td>
        <td width="20%">Delete</td>
        </thead>
        <tbody>

        </tbody>
    </table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [{
                    data: "name",
                    render: function (data, type, row) {
                        return "<a href='/movies/edit/" + row.id + "'>" + data + "</a>";
                    }
                },
                {
                    data: "genre.name"
                },
                {
                    data: "id",
                    render: function (data) {
                        return "<button class='buton btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                    }
                }
                ]
            });
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>    
}
