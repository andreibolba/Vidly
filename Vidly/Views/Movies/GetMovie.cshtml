@model Vidly.Models.Movie
@{
    ViewBag.Title = "GetMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .member {
        font-size: 20px;
        padding-bottom: 10px;
    }
</style>
<h2>@Model.Name</h2>
<ul>
    <li class="member">Genre: @Model.Genre</li>
    <li class="member">Relase date: @Model.Released.ToString("dddd, MMMM dd, yyyy")</li>
    <li class="member">Data Added: @Model.Added.ToString("dddd, MMMM dd, yyyy")</li>
    <li class="member">Number in Stock: @Model.Stock</li>
</ul>