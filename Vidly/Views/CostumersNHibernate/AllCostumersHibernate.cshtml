@model  Vidly.ViewModelHibernate.CostumerHibernateFormViewModel

@{
    ViewBag.Title = "AllCostumersHibernate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html {
        scroll-behavior: smooth;
    }

    ::-webkit-scrollbar {
        width: 0px;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    thead {
        font-size: 25px;
        padding: 20px;
    }

    td, th {
        border: 1px solid #808080;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #808080;
    }

    .white {
        color: white;
    }

    .link {
        color: blue;
        text-decoration: underline;
    }

    .buton {
        color: white;
        font-weight: bold;
        background: white;
        color: black;
        border: 1.5px solid black;
    }

    #buton {
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>

<h2>All Costumers(Hibernate)</h2>
@if (Model.CanManageCostumers)
{
    <button class="btn btn-primary " id="buton">
        @Html.ActionLink("Add Costumer", "Edit", "CostumersNHibernate", new { id = 0 }, new { @class = "white" })
    </button>
}
<table>
    <thead>
    <th width="40%">Name</th>
    <th width="30%">Membership name</th>
    <th width="30%">BirthDate</th>
    </thead>
    <tbody>
        @foreach (var c in Model.Costumers)
        {
            <tr>
                <td>
                    @Html.ActionLink(c.Name, "Edit", "CostumersNHibernate", new { id = c.Id }, new { @class = "link" })
                </td>
                <td>
                    @c.MembershipTypeHibernate.Name
                </td>
                <td>
                    @if (c.BirthDate.HasValue == true)
                    {<p>@c.BirthDate.Value.ToString("MM/dd/yyyy")</p>}
                else
                {
                    <p>No birthdate</p>
                }
                </td>
            </tr>
        }
    </tbody>
</table>

