@model Vidly.NHibernateModels.CostumersHibernate
@{
    ViewBag.Title = "CostumerHibernateRForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .member {
        font-size: 20px;
        padding-bottom: 10px;
    }
</style>
<h1>Costumer</h1>
<h2>@Model.Name</h2>
<ul>
    <li>Name: @Model.Name</li>
    <li>Birth date: @Model.BirthDate.Value.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Membership Name: @Model.MembershipTypeHibernate.Name</li>
    <li>Subscrined to newslettter: @if (Model.IsSubscribedToNewsletter) {<p>Yes</p>}else{<p>No</p>}</li>
</ul>

